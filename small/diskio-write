# update interval in seconds
update_interval 3
update_interval_on_battery 5

# this is the number of times conky will update before quitting
# set to zero to run forever
total_run_times 0

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

draw_shades no
draw_outline no
draw_graph_borders no      # borders around the graph, ex. cpu graph, network down speed grah
                           # does not include bars, ie. wifi strength bar, cpu bar
# .:: window border ::.
# you can add a border to the window by setting the border_width value to any number greater than 0 and by setting the draw_borders option to true.
draw_borders no
border_width 0
stippled_borders 0
border_inner_margin 0
border_outer_margin 0

# .:: box alignment on screen ::.
alignment top_left
# gap between borders of screen and text, same thing as passing -x at command line
gap_x 2
gap_y 498

minimum_size 250 81     # horizontal vertical

# .:: window settings ::.
own_window yes
own_window_type desktop     # values: desktop (background), panel (bar)
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
# :: transparency configuration ::
own_window_transparent yes
own_window_argb_visual yes  # turn on transparency
own_window_argb_value 255   # range from 0   transparent
                                    to   255 opaque

imlib_cache_flush_interval 300
# use the parameter -n on ${image ..} to never cache and always update the image upon a change

default_color black
color1 e9e9e6       # grey | e5e5e5 cccccc b2b2b2
color2 800020       # burgundy

# ${offset 47}${voffset -4}${diskiograph_read /dev/sda 20,50 cccccc 999999 20000 -t -l}

TEXT
${voffset -1}${offset 12}${color1}${if_match ${swapperc} >= 90}${color2}${endif}${swapbar 5, 75}
${offset 7}${voffset -5}${diskiograph_write /dev/sda 67,84 cc0000 660000 245000 -t -l}
${goto 109}${voffset -35}${color1}swap${goto 168}${color}${swapperc}%
${goto 109}${voffset 3}${color1}write${goto 168}${color}${diskio_write /dev/sda}\
${image ~/scripts/conky/monochrome/small/diskio-write.png -n -p 0,0}
