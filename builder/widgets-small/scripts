# desktop sidebar
cd ~/conky/monochrome/builder/widgets-small;\
# disks-desktop usb-maxtor ... usb-devices
cat config cpu-mem network-desktop disk power > ~/conky/monochrome/widgets-small/sidebar;\
echo '${voffset -300}]];' >> ~/conky/monochrome/widgets-small/sidebar



# laptop sidebar
cd ~/conky/monochrome/builder/widgets-small;\
cat config cpu-mem network-laptop disk power > ~/conky/monochrome/widgets-small/sidebar;\
echo '${voffset -300}]];' >> ~/conky/monochrome/widgets-small/sidebar
