conky.config = {
  lua_load = '~/conky/monochrome/menu.lua',
  lua_draw_hook_pre = 'reset_state',
  
  update_interval = 3,  -- update interval in seconds
  xinerama_head = 0,      -- for multi monitor setups, select monitor to run on: 0,1,2
  double_buffer = true,   -- use double buffering (reduces flicker, may not work for everyone)

  -- window alignment
  alignment = 'top_left',  -- top|middle|bottom_left|right
  gap_x = 195,
  gap_y = 37,

  -- window settings
  minimum_width = 189,      -- conky will add an extra pixel to this  
  maximum_width = 189,
  minimum_height = 38,
  own_window = true,
  own_window_type = 'desktop',    -- values: desktop (background), panel (bar)
  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

  -- window borders
  draw_borders = false,     -- draw borders around the conky window
  border_width = 1,         -- width of border window in pixels
  border_inner_margin = 0,  -- margin between the border and text in pixels
  border_outer_margin = 0,  -- margin between the border and the edge of the window in pixels
  
  -- transparency configuration
  draw_blended = false,
  own_window_transparent = true,
  own_window_argb_visual = true,  -- turn on transparency
  own_window_argb_value = 255,    -- range from 0 (transparent) to 255 (opaque)
  
  -- images
  imlib_cache_flush_interval = 250,

  -- font settings
  use_xft = false,
  draw_shades = false,      -- black shadow on text (not good if text is black)
  draw_outline = false,     -- black outline around text (not good if text is black)
  -- colors
  default_color = 'cf9c7b',  -- regular text
  color1 = 'white',
  color2 = 'bf241f'          -- highlight important packages
};

conky.text = [[
# :::::::::::: package updates
${if_existing /tmp/conky/dnf.packages.formatted}\
# -------  vertical table image -------
${image ~/conky/monochrome/images/common/burgundy-menu-dark.png -p 0,0}\
${image ~/conky/monochrome/images/common/burgundy-menu-dark-edge-top-left.png -p 0,0}\
${image ~/conky/monochrome/images/common/burgundy-menu-light.png -p 51,0}\
${image ~/conky/monochrome/images/common/burgundy-menu-light-edge-top-right.png -p 182,0}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 189,0}\
${image ~/conky/monochrome/images/common/burgundy-menu-dark-edge-bottom-left.png -p 0,13}\
${image ~/conky/monochrome/images/common/burgundy-menu-light-edge-bottom-right.png -p 182,13}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 0,20}\
# --------- end of table image ---------
${voffset 2}${offset 5}${color1}dnf${goto 57}${color}${lines /tmp/conky/dnf.packages.formatted} package updates
# ----------- table image ------------
${image ~/conky/monochrome/images/common/burgundy-menu-dark.png -p 0,23}\
${image ~/conky/monochrome/images/common/burgundy-menu-dark-edge-top-left.png -p 0,23}\
${image ~/conky/monochrome/images/common/burgundy-menu-dark-edge-top-right.png -p 129,23}\
${image ~/conky/monochrome/images/common/burgundy-menu-light.png -p 0,42}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 136,23}\
# -------- end of table image ---------
${lua configure_menu burgundy light 136 3}\
# ----------- table image ------------
${image ~/conky/monochrome/images/common/burgundy-menu-dark.png -p 137,23}\
${image ~/conky/monochrome/images/common/burgundy-menu-dark-edge-top-left.png -p 137,23}\
${image ~/conky/monochrome/images/common/burgundy-menu-dark-edge-top-right.png -p 182,23}\
${image ~/conky/monochrome/images/common/burgundy-menu-light.png -p 137,42}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 189,23}\
# -------- end of table image ---------
${lua add_offsets 0 42}\
# optional dnf branding, can be removed or won't matter if the image does not exist
${image ~/conky/monochrome/images/common/burgundy-menu-dnf.png -p 94,44}\
${voffset 10}${offset 5}${color1}package${alignr 5}version${voffset 3}
${color}${lua_parse populate_menu /tmp/conky/dnf.packages.formatted 36 900}${voffset 5}
${lua_parse draw_bottom_edges 137 52}\
${else}\
${image ~/conky/monochrome/images/compact/ochre-packages.png -p 0,0}\
# ----------- menu image ------------
${image ~/conky/monochrome/images/common/burgundy-menu-light.png -p 41,0}\
${image ~/conky/monochrome/images/common/burgundy-menu-light-edge-top-left.png -p 41,0}\
${image ~/conky/monochrome/images/common/burgundy-menu-light-edge-top-right.png -p 151,0}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 158,0}\
${image ~/conky/monochrome/images/common/burgundy-menu-light-edge-bottom-left.png -p 41,31}\
${image ~/conky/monochrome/images/common/burgundy-menu-light-edge-bottom-right.png -p 151,31}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 41,38}\
# -------- end of menu image ---------
${voffset 4}${offset 46}${color1}dnf
${voffset 2}${offset 46}${color}no package updates
${endif}\
]];
