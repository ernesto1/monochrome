${image ~/conky/monochrome/images/menu-blank.png -p 231,74}\
# -------- end of table image ---------
# ----------- table image ------------
${image ~/conky/monochrome/images/compact/burgundy-menu-dark.png -p 234,74}\
${image ~/conky/monochrome/images/compact/burgundy-menu-dark-edge-top-left.png -p 234,74}\
