${image ~/conky/monochrome/images/menu-blank.png -p 273,74}\
# -------- end of table image ---------
${image ~/conky/monochrome/images/compact/burgundy-menu-peers.png -p 38,115}\
${lua add_offsets 0 19}\
${offset 5}${color1}active torrents${goto 216}up${goto 246}down${voffset 3}
${color}${lua_parse populate_menu /tmp/conky/transmission.active 17}${voffset 10}
${lua_parse draw_bottom_edges 192 39}${lua_parse draw_bottom_edges 234 39}\
${lua add_offsets 0 3}\
${endif}\
${else}\
# ----------- menu image ------------
${image ~/conky/monochrome/images/compact/burgundy-menu-light.png -p 0,74}\
${image ~/conky/monochrome/images/compact/burgundy-menu-light-edge-top-left.png -p 0,74}\
${image ~/conky/monochrome/images/compact/burgundy-menu-light-edge-top-right.png -p 182,74}\
${image ~/conky/monochrome/images/menu-blank.png -p 189,74}\
${image ~/conky/monochrome/images/compact/burgundy-menu-light-edge-bottom-left.png -p 0,103}\
${image ~/conky/monochrome/images/compact/burgundy-menu-light-edge-bottom-right.png -p 182,103}\
${image ~/conky/monochrome/images/menu-blank.png -p 0,110}\
# -------- end of menu image ---------
${lua add_offsets 0 39}\
${goto 17}${color}active torrents input file
${voffset 3}${goto 65}is missing${voffset 10}
${endif}\
# :::::::::::: peers
${if_existing /tmp/conky/transmission.peers}\
${if_match ${lua get peers} > 0}\
${lua configure_menu compact burgundy-menu-light-edge-bottom 99 3}\
# ----------- table image ------------
${lua_parse draw_image ~/conky/monochrome/images/compact/burgundy-menu-dark.png 0 0}\
