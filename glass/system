${image ~/conky/monochrome/images/glass/blue-menu-light.png -p 0,234}\
${image ~/conky/monochrome/images/menu-blank.png -p 219,215}\
${image ~/conky/monochrome/images/menu-blank.png -p 0,367}\
# --------- end of table image --------
${voffset 12}${offset 5}${color1}process${alignr 5}mem   pid${voffset 4}
${template1 1}
${template1 2}
${template1 3}
${template1 4}
${template1 5}
${template1 6}
${template1 7}
${template1 8}
# ::::::::::::::::: bittorrent & zoom :::::::::::::::::
# --- composite vertical table image ---
${image ~/conky/monochrome/images/glass/blue-menu-dark.png -p 0,372}\
${image ~/conky/monochrome/images/glass/blue-menu-light.png -p 69,372}\
${image ~/conky/monochrome/images/menu-blank.png -p 160,372}\
${image ~/conky/monochrome/images/menu-blank.png -p 0,425}\
# --------- end of table image ---------
${voffset 13}${offset 41}${color1}zoom${goto 74}${color}${if_running zoom}running${else}off${endif}
${voffset 3}${offset 5}${color1}bittorrent${goto 74}${color}${tcp_portmon 51413 51413 count} peer(s)
${voffset 3}${offset 22}${color1}seeding${goto 74}${color}${exec lsof -c transmission -n | grep -v deleted | grep -cE '[0-9]+[a-z|A-Z] +REG +[0-9]+,[0-9]+ +[0-9]{6,}'} file(s)
# :::::::: bittorrent connection peers :::::::::::::::::
${if_running transmission-gt}\
# ------- composite table image -------
${image ~/conky/monochrome/images/glass/blue-menu-dark.png -p 0,427}\
${image ~/conky/monochrome/images/glass/blue-menu-light.png -p 0,446}\
${image ~/conky/monochrome/images/menu-blank.png -p 160,427}\
${image ~/conky/monochrome/images/menu-blank.png -p 0,612}\
# --------- end of table image --------
${voffset 9}${offset 5}${color1}ip address${alignr 64}remote port${voffset 5}
${if_match ${tcp_portmon 51413 51413 count} > 0}\
${template2 0}
${template2 1}
${template2 2}
${template2 3}
${template2 4}
${template2 5}
${template2 6}
