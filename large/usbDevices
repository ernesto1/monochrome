conky.config = {
  update_interval = 2,  -- update interval in seconds
  total_run_times = 0,  -- this is the number of times conky will update before quitting, set to zero to run forever
  xinerama_head = 0,    -- for multi monitor setups, select monitor to run on: 0,1,2
  double_buffer = true, -- use double buffering (reduces flicker, may not work for everyone)

  -- window alignment
  alignment = 'top_right',  -- top|middle|bottom_left|right
  gap_x = 20,               -- same as passing -x at command line
  gap_y = 265,

  -- window settings
  minimum_width = 150,
  minimum_height = 181,
  own_window = true,
  own_window_type = 'desktop',              -- values: desktop (background), panel (bar)
  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

  -- transparency configuration
  own_window_transparent = true,
  own_window_argb_visual = true,  -- turn on transparency
  own_window_argb_value = 255,    -- range from 0 (transparent) to 255 (opaque)

  -- window borders
  draw_borders = false,     -- draw borders around the conky window
  border_width = 1,         -- width of border window in pixels
  stippled_borders = 1,     -- border stippling (dashing) in pixels
  border_inner_margin = 0,  -- margin between the border and text in pixels
  border_outer_margin = 0,  -- margin between the border and the edge of the window in pixels

  -- graph settings
  draw_graph_borders = false, -- borders around the graph, ex. cpu graph, network down speed grah
                              -- does not include bars, ie. wifi strength bar, cpu bar

  imlib_cache_flush_interval = 300,
  -- use the parameter -n on ${image ..} to never cache and always update the image upon a change

  -- font settings
  draw_shades = false,    -- black shadow on text (not good if text is black)
  draw_outline = false,   -- black outline around text (not good if text is black)
  default_color = 'black',
  color1 = 'white',
  color2 = '800020',      -- burgundy
};

conky.text = [[
${if_mounted /run/media/ernesto/sandisk}\
${image ~/conky/monochrome/images/small/usbStick.png -n -p 0,0}\
${voffset 35}${color1}${if_match ${fs_used_perc /run/media/ernesto/sandisk} > 90}${color2}${endif}${fs_bar 3, 45 /run/media/ernesto/sandisk}
${offset 55}${voffset -47}${color1}fs type${goto 110}${color}${fs_type /run/media/ernesto/sandisk}
${offset 55}${voffset 3}${color1}size${goto 110}${color}${fs_size /run/media/ernesto/sandisk}
${offset 55}${voffset 3}${color1}free${goto 110}${color}${fs_free /run/media/ernesto/sandisk}
${else}\
${voffset 9}\
${image ~/conky/monochrome/images/small/usbBorder.png -n -p 144,0}\
${alignr}sandisk usb drive  
${alignr}not connected  
${voffset 11}\
${endif}\
${if_mounted /run/media/ernesto/MAXTOR}\
${image ~/conky/monochrome/images/small/usbDrive.png -n -p 0,66}\
${voffset 55}${color1}${if_match ${fs_used_perc /run/media/ernesto/MAXTOR} > 90}${color2}${endif}${fs_bar 3, 45 /run/media/ernesto/MAXTOR}
${offset 55}${voffset -47}${color1}fs type${goto 110}${color}${fs_type /run/media/ernesto/MAXTOR}
${offset 55}${voffset 3}${color1}size${goto 110}${color}${fs_size /run/media/ernesto/MAXTOR}
${offset 55}${voffset 3}${color1}free${goto 110}${color}${fs_free /run/media/ernesto/MAXTOR}
${else}\
${voffset 29}\
${image ~/conky/monochrome/images/small/usbBorder.png -n -p 144,66}\
${alignr}maxtor usb drive  
${alignr}not connected  
${voffset 11}\
${endif}\
${if_mounted /run/media/ernesto/disk}\
${image ~/conky/monochrome/images/small/sdCard.png -n -p 0,132}\
${voffset 55}${color1}${if_match ${fs_used_perc /run/media/ernesto/disk} > 90}${color2}${endif}${fs_bar 3, 45 /run/media/ernesto/disk}
${offset 55}${voffset -47}${color1}fs type${goto 110}${color}${fs_type /run/media/ernesto/disk}
${offset 55}${voffset 3}${color1}size${goto 110}${color}${fs_size /run/media/ernesto/disk}
${offset 55}${voffset 3}${color1}free${goto 110}${color}${fs_free /run/media/ernesto/disk}
${else}\
${voffset 29}\
${image ~/conky/monochrome/images/small/usbBorder.png -n -p 144,132}\
${alignr}sandisk sd card  
${alignr}not connected  
${endif}\
]];
