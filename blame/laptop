conky.config = {
  update_interval = 2,  -- update interval in seconds
  total_run_times = 0,  -- this is the number of times conky will update before quitting, set to zero to run forever
  xinerama_head = 0,    -- for multi monitor setups, select monitor to run on: 0,1,2
  double_buffer = true, -- use double buffering (reduces flicker, may not work for everyone)

  -- window alignment
  alignment = 'bottom_middle',     -- top|middle|bottom_left|middle|right
  gap_x = -510,                     -- same as passing -x at command line
  gap_y = 13,

  -- window settings
  minimum_width = 208,
  minimum_height = 136,
  own_window = true,
  own_window_type = 'desktop',    -- values: desktop (background), panel (bar)
  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

  -- transparency configuration
  own_window_transparent = true,
  own_window_argb_visual = true,  -- turn on transparency
  own_window_argb_value = 255,    -- range from 0 (transparent) to 255 (opaque)

  -- window borders
  draw_borders = false,     -- draw borders around the conky window
  border_width = 1,         -- width of border window in pixels
  stippled_borders = 0,     -- border stippling (dashing) in pixels
  border_inner_margin = 0,  -- margin between the border and text in pixels
  border_outer_margin = 0,  -- margin between the border and the edge of the window in pixels

  -- graph settings
  draw_graph_borders = false, -- borders around the graph, ex. cpu graph, network down speed grah
                              -- does not include bars, ie. wifi strength bar, cpu bar

  imlib_cache_flush_interval = 300,
  -- use the parameter -n on ${image ..} to never cache and always update the image upon a change

  -- font settings
  draw_shades = false,    -- black shadow on text (not good if text is black)
  draw_outline = false,   -- black outline around text (not good if text is black)
  default_color = 'black',
  color1 = 'white',
  color2 = '1a336b',      -- dark blue
  color3 = '800020',      -- red
};

conky.text = [[
########## wifi
${image ~/conky/monochrome/images/blame/wifi.png -n -p 170,9}\
${color1} network${goto 59}${color}${wireless_essid wlp4s0}
${voffset 3}${color1} channel${goto 59}${color}${wireless_channel wlp4s0}
${voffset 3}${color1} bitrate${goto 59}${color}${wireless_bitrate wlp4s0}${alignr 52}${wireless_link_qual_perc wlp4s0}%
${image ~/conky/monochrome/images/blame/filesystem-bar.png -n -p 53,51}\
${voffset 3}${color1}strength${goto 59}${voffset 2}${color2}${if_match ${wireless_link_qual_perc wlp4s0} < 30}${color3}${endif}${wireless_link_bar 4,97 wlp4s0}
########## power
${image ~/conky/monochrome/images/blame/battery.png -n -p 170,90}\
${voffset 24}${alignr 42}${color}${acpiacadapter}  ${color1}power  
${voffset 3}${color}${if_match ${battery_percent BAT0} == 100}${alignr 42}bat fully charged${else}${offset 14}${battery_percent BAT0}%${alignr 42}${battery_time BAT0}${endif}  ${color1}charge 
${voffset 4}${goto 15}${color2}${if_match ${battery_percent BAT0} < 30}${color3}${endif}${battery_bar 4,97 BAT0}${voffset -1}${alignr 42}${color1}battery\
${image ~/conky/monochrome/images/blame/filesystem-bar.png -n -p 9,121}\
]];
