conky.config = {
  update_interval = 2,  -- update interval in seconds
  total_run_times = 0,  -- this is the number of times conky will update before quitting, set to zero to run forever
  xinerama_head = 1,    -- multi monitor setup: x11 (0,1,2,..) wayland (1,2,3,..)
  double_buffer = true, -- use double buffering (reduces flicker, may not work for everyone)

  -- window alignment
  alignment = 'bottom_left',       -- top|middle|bottom_left|middle|right
  gap_x = 1200,                     -- same as passing -x at command line
  gap_y = 15,

  -- window settings
  minimum_width = 192,
  minimum_height = 90,
  own_window = true,
  own_window_type = 'desktop',    -- values: desktop (background), panel (bar)
  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

  -- transparency configuration
  own_window_transparent = true,
  own_window_argb_visual = true,  -- turn on transparency
  own_window_argb_value = 255,    -- range from 0 (transparent) to 255 (opaque)

  -- window borders
  draw_borders = false,     -- draw borders around the conky window
  border_width = 1,         -- width of border window in pixels
  stippled_borders = 0,     -- border stippling (dashing) in pixels
  border_inner_margin = 0,  -- margin between the border and text in pixels
  border_outer_margin = 0,  -- margin between the border and the edge of the window in pixels

  -- graph settings
  draw_graph_borders = false, -- borders around the graph, ex. cpu graph, network down speed grah
                              -- does not include bars, ie. wifi strength bar, cpu bar

  imlib_cache_flush_interval = 300,
  -- use the parameter -n on ${image ..} to never cache and always update the image upon a change

  -- font settings
  draw_shades = false,    -- black shadow on text (not good if text is black)
  draw_outline = false,   -- black outline around text (not good if text is black)
  default_color = 'black',
  color1 = 'white',
  color2 = '1a336b',      -- dark blue
  color3 = '800020',      -- red
};

conky.text = [[
${image ~/conky/monochrome/images/blame/usb-box.png -n -p 0,0}\
${image ~/conky/monochrome/images/blame/usb-box.png -n -p 69,0}\
${image ~/conky/monochrome/images/blame/usb-box.png -n -p 138,0}\
${if_mounted /run/media/ernesto/sandisk}\
${image ~/conky/monochrome/images/blame/usb-stick.png -n -p 3,3}\
${voffset 41}${offset 3}${color2}${if_match ${fs_used_perc /run/media/ernesto/sandisk} > 90}${color3}${endif}${fs_bar 5, 48 /run/media/ernesto/sandisk}
${voffset 8}${offset 5}${color}${fs_free /run/media/ernesto/sandisk}
${voffset 3}${offset 14}free
${else}\
${image ~/conky/monochrome/images/blame/usb-box-filler1.png -n -p 0,0}\
${voffset 91}\
${endif}\
${if_mounted /run/media/ernesto/MAXTOR}\
${voffset -91}${image ~/conky/monochrome/images/blame/usb-drive.png -n -p 72,3}\
${voffset 41}${goto 72}${color2}${if_match ${fs_used_perc /run/media/ernesto/MAXTOR} > 90}${color3}${endif}${fs_bar 5, 48 /run/media/ernesto/MAXTOR}
${voffset 8}${goto 77}${color}${fs_free /run/media/ernesto/MAXTOR}
${voffset 3}${goto 86}free
${else}\
${voffset -91}\
${image ~/conky/monochrome/images/blame/usb-box-filler2.png -n -p 69,0}\
${voffset 91}\
${endif}\
${if_mounted /run/media/ernesto/disk}\
${voffset -91}${image ~/conky/monochrome/images/blame/usb-sdCard.png -n -p 141,3}\
${voffset 41}${goto 141}${color2}${if_match ${fs_used_perc /run/media/ernesto/disk} > 90}${color3}${endif}${fs_bar 5, 48 /run/media/ernesto/disk}
${voffset 8}${goto 145}${color}${fs_free /run/media/ernesto/disk}
${voffset 3}${goto 153}free
${else}\
${voffset -91}\
${image ~/conky/monochrome/images/blame/usb-box-filler3.png -n -p 141,0}\
${voffset 91}\
# the final voffset is to account for that pesky added extra vertical space due to the combination of 'voffset'
# with text used... this seems like a bug in conky : /
${endif}${voffset -130}
]];
