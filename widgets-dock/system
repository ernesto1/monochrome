${image ~/conky/monochrome/images/common/menu-blank.png -p 0,334}\
# ------- light panel bottom edge -------
${alignc}${color3}network${voffset 10}
# assumption: only one network device will be connected to the internet at a time
# :::: ethernet
${if_up enp0s25}\
# -------  vertical table image -------
${image ~/conky/monochrome/images/common/yellow-menu-dark.png -p 0,336}\
${image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-left.png -p 0,336}\
${image ~/conky/monochrome/images/common/yellow-menu-light.png -p 71,336}\
${image ~/conky/monochrome/images/common/yellow-menu-light-edge-top-right.png -p 162,336}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 169,336}\
${image ~/conky/monochrome/images/common/yellow-menu-dark-edge-bottom-left.png -p 0,399}\
${image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png -p 162,399}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 0,406}\
# --------- end of table image ---------
${lua add_offsets 0 73}\
${offset 5}${color1}local ip${goto 77}${color}${addr enp0s25}
${voffset 3}${offset 5}${color1}speed${goto 77}${color}${execi 180 ethtool enp0s25 2>/dev/null | grep -i speed | cut -d ' ' -f 2}
${voffset 3}${offset 5}${color1}total up${goto 77}${color}${totalup enp0s25}
${voffset 3}${offset 5}${color1}total down${goto 77}${color}${totaldown enp0s25}
${endif}\
]];
