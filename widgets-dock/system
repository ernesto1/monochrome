${image ~/conky/monochrome/images/common/green-menu-light-edge-bottom-left.png -p 0,160}\
${image ~/conky/monochrome/images/common/green-menu-light-edge-bottom-right.png -p 162,160}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 0,167}\
# ------- light panel bottom edge -------
${alignc}${color3}memory${voffset 8}
# -------  table | yellow 1 column | top edge    -------
${image ~/conky/monochrome/images/common/yellow-menu-dark.png -p 0,169}\
${image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-left.png -p 0,169}\
${image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-right.png -p 162,169}\
${image ~/conky/monochrome/images/common/yellow-menu-light.png -p 0,188}\
