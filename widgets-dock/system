${image ~/conky/monochrome/images/common/menu-blank.png -p 169,274}\
${image ~/conky/monochrome/images/common/yellow-menu-dark-edge-bottom-left.png -p 0,305}\
${image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png -p 162,305}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 0,312}\
# --------- end of table image ---------
${voffset 11}${offset 5}${color1}swap read${goto 77}${color}${cat /tmp/conky/system.swap.read}
${voffset 3}${offset 5}${color1}swap write${goto 77}${color}${cat /tmp/conky/system.swap.write}${voffset 10}
# :::::::::::: network
# ------- light panel top edge    -------
${image ~/conky/monochrome/images/common/green-menu-light.png -p 0,315}\
${image ~/conky/monochrome/images/common/green-menu-light-edge-top-left.png -p 0,315}\
