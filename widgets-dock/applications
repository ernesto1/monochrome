--[[
this conky requires the following supporting scripts running in the background:

 - dnfPackageLookup.bash
 - transmission.bash
   requires the 'remote control' feature enabled in the transmission bittorrent client: edit > preferences > remote

output files from these supporting scrips are read from /tmp/conky
]]

conky.config = {
  lua_load = '~/conky/monochrome/common.lua ~/conky/monochrome/panel.lua',
  lua_draw_hook_pre = 'reset_state',
  
  update_interval = 2,    -- update interval in seconds
  xinerama_head = 1,      -- for multi monitor setups, select monitor to run on: 0,1,2
  double_buffer = true,   -- use double buffering (reduces flicker, may not work for everyone)

  -- window alignment
  alignment = 'middle_right',   -- top|middle|bottom_left|right
  gap_x = 3,
  gap_y = -42,

  -- window settings
  minimum_width = 169,     -- conky will add an extra pixel to this
  maximum_width = 169,
  minimum_height = 1354,
  own_window = true,
  own_window_type = 'desktop',  -- values: desktop (background), panel (bar)

  -- window borders
  draw_borders = false,     -- draw borders around the conky window
  border_width = 1,         -- width of border window in pixels
  border_inner_margin = 0,  -- margin between the border and text in pixels
  border_outer_margin = 0,  -- margin between the border and the edge of the window in pixels
  
  -- transparency configuration
  draw_blended = false,
  own_window_transparent = true,
  own_window_argb_visual = true,    -- turn on transparency
  own_window_argb_value = 255,      -- range from 0 (transparent) to 255 (opaque)
  
  -- miscellanous settings
  imlib_cache_flush_interval = 250,
  max_user_text = 20000,    -- max size of user text buffer in bytes, i.e. text inside conky.text section 
                            -- default is 16,384 bytes
  
  -- font settings
  use_xft = false,
  draw_shades = false,      -- black shadow on text (not good if text is black)
  draw_outline = false,     -- black outline around text (not good if text is black)
  -- colors
  default_color = '703d0a', -- regular text
  color1 = 'white',
  color2 = '68a315',        -- highlight important packages
  color3 = 'white',         -- secondary panel labels
  color4 = 'a7aa71'         -- secondary panel text
};

conky.text = [[
${lua set_total_lines 72}\
# :::::::::::: package updates
${if_existing /tmp/conky/dnf.packages.formatted}\
${image ~/conky/monochrome/images/common/green-packages.png -p 0,0}\
# ------- panel | light green no left round edges | top -------
${image ~/conky/monochrome/images/common/green-panel-light.png -p 38,0}\
${image ~/conky/monochrome/images/common/green-panel-light-edge-top-right.png -p 162,0}\
${image ~/conky/monochrome/images/common/blank-panel.png -p 169,0}\
${image ~/conky/monochrome/images/common/green-panel-light-edge-bottom-right.png -p 162,31}\
${image ~/conky/monochrome/images/common/blank-panel.png -p 38,38}\
# ------- panel | light green no left round edges | bottom -------
${voffset 5}${offset 45}${color3}dandified yum
${voffset 2}${offset 45}${color4}${lines /tmp/conky/dnf.packages.formatted} package updates${voffset 8}
# -------  table | yellow 1 column | top edge    -------
${image ~/conky/monochrome/images/common/yellow-panel-dark.png -p 0,41}\
${image ~/conky/monochrome/images/common/yellow-panel-dark-edge-top-left.png -p 0,41}\
${image ~/conky/monochrome/images/common/yellow-panel-dark-edge-top-right.png -p 162,41}\
${image ~/conky/monochrome/images/common/yellow-panel-light.png -p 0,64}\
${image ~/conky/monochrome/images/common/blank-panel.png -p 169,41}\
# -------  table | yellow 1 column | bottom edge -------
${lua increment_offsets 0 64}\
# optional dnf branding, can be removed or won't matter if the image does not exist
${image ~/conky/monochrome/images/common/yellow-panel-dnf.png -p 95,66}\
${voffset 5}${offset 5}${color1}package${alignr 4}version${voffset 7}
${color}${lua_parse paginate /tmp/conky/dnf.packages.formatted 22}${lua increase_y_offset /tmp/conky/dnf.packages.formatted}${voffset 9}
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-bottom-left.png 0 -7}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-bottom-right.png 162 -7}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 0 0}\
${lua increment_offsets 0 4}\
${else}\
# ::: no updates available or dnf script not running
${image ~/conky/monochrome/images/common/yellow-packages.png -p 0,0}\
# ------- panel | light yellow no left round edges | top -------
${image ~/conky/monochrome/images/common/yellow-panel-light.png -p 38,0}\
${image ~/conky/monochrome/images/common/yellow-panel-light-edge-top-right.png -p 162,0}\
${image ~/conky/monochrome/images/common/blank-panel.png -p 169,0}\
${image ~/conky/monochrome/images/common/yellow-panel-light-edge-bottom-right.png -p 162,31}\
${image ~/conky/monochrome/images/common/blank-panel.png -p 38,38}\
# ------- panel | light yellow no left round edges | bottom -------
${voffset 5}${offset 45}${color1}dandified yum
${voffset 2}${offset 45}${color}no package updates${voffset 9}
${lua increment_offsets 0 42}${lua decrease_total_lines 2}\
${endif}\
# :::::::::::::::: now playing
# the UI of this conky has four states: song with album art
#                                       song with no album art
#                                       no music player is running
#                                       dependent java dbus listener application is not running
# ::: no player available
${if_existing /tmp/conky/musicplayer.name}\
${if_existing /tmp/conky/musicplayer.name Nameless}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-sound-wave.png 0 0}\
# ------- panel | light yellow no left round edges | top -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light.png 38 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-bottom-right.png 162 31}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 38 38}\
# ------- panel | light yellow no left round edges | bottom -------
${voffset 5}${lua_parse add_x_offset offset 45}${color1}now playing
${voffset 2}${lua_parse add_x_offset offset 45}${color}no player running${voffset 9}
${lua increment_offsets 0 42}\
${else}\
# ::: player status
${lua increment_offsets 0 3}${voffset 3}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-sound-wave.png 0 0}\
${if_existing /tmp/conky/musicplayer.playbackStatus Playing}\
# ------- panel | light green no left round edges | top -------
${lua_parse draw_image ~/conky/monochrome/images/common/green-panel-light.png 38 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-panel-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-panel-light-edge-bottom-right.png 162 31}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 38 38}\
# ------- panel | light green no left round edges | bottom -------
${voffset 5}${lua_parse add_x_offset offset 45}${color3}${lua_parse truncate_string ${cat /tmp/conky/musicplayer.name}}
${voffset 2}${lua_parse add_x_offset offset 45}${color4}${lua_parse truncate_string ${cat /tmp/conky/musicplayer.playbackStatus}}
${else}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-sound-wave.png 0 0}\
# ------- panel | light yellow no left round edges | top -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light.png 38 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-bottom-right.png 162 31}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 38 38}\
# ------- panel | light yellow no left round edges | bottom -------
${voffset 5}${lua_parse add_x_offset offset 45}${color1}${lua_parse truncate_string ${cat /tmp/conky/musicplayer.name}}
${voffset 2}${lua_parse add_x_offset offset 45}${color}${lua_parse truncate_string ${cat /tmp/conky/musicplayer.playbackStatus}}
${endif}\
${lua increment_offsets 0 41}\
${voffset 9}\
# ::: album art
${if_existing /tmp/conky/musicplayer.albumArtPath}\
# ------- light panel top edge    -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-top-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-bottom-left.png 0 162}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-bottom-right.png 162 162}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 0 169}\
# ------- light panel bottom edge -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-album-placeholder.png 2 2}\
${lua_parse load_image ${cat /tmp/conky/musicplayer.albumArtPath} 165x165 2 2}\
${voffset 172}${lua increment_offsets 0 172}${lua decrease_total_lines 12}\
${endif}\
# ::: track details
# panel expands based on the track metadata fields available
# the position of the bottom edge images is shifted down 16px for each field
# -------  vertical table image top -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-dark.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-dark-edge-top-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light.png 45 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 169 0}\
${if_existing /tmp/conky/musicplayer.playbackStatus Playing}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-sound-wave.png 109 1}\
${endif}\
# --------- end of table image top ---------
${lua increment_offsets 0 16}\
${voffset 4}${lua_parse add_x_offset offset 5}${color1}title${lua_parse add_x_offset goto 50}${color}${cat /tmp/conky/musicplayer.title}${lua decrease_total_lines 2}
${if_match "${lua get album ${cat /tmp/conky/musicplayer.album}}" != "unknown album"}\
${voffset 3}${lua_parse add_x_offset offset 5}${color1}album${lua_parse add_x_offset goto 50}${color}${lua get album}${lua increment_offsets 0 16}${lua decrease_total_lines 1}
${endif}\
${if_match "${lua get artist ${cat /tmp/conky/musicplayer.artist}}" != "unknown artist"}\
${voffset 3}${lua_parse add_x_offset offset 5}${color1}artist${lua_parse add_x_offset goto 50}${color}${lua get artist}${lua increment_offsets 0 16}${lua decrease_total_lines 1}
${endif}\
${if_match "${lua get genre ${cat /tmp/conky/musicplayer.genre}}" != "unknown genre"}\
${voffset 3}${lua_parse add_x_offset offset 5}${color1}genre${lua_parse add_x_offset goto 50}${color}${lua get genre}${lua increment_offsets 0 16}${lua decrease_total_lines 1}
${endif}\
# ------  vertical table image bottom ------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-dark-edge-bottom-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-bottom-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 0 7}\
# -------- end of table image bottom -------
${lua increment_offsets 0 14}\
${voffset 12}\
${endif}\
${else}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-sound-wave.png 0 0}\
# ------- panel | dark green no left round edges | top -------
${lua_parse draw_image ~/conky/monochrome/images/common/green-panel-dark.png 38 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-panel-dark-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-panel-dark-edge-bottom-right.png 162 31}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 38 38}\
# ------- panel | dark green no left round edges | bottom -------
${voffset 5}${lua_parse add_x_offset offset 45}${color3}now playing
${voffset 2}${lua_parse add_x_offset offset 45}${color4}input files missing${voffset 9}
${lua increment_offsets 0 42}\
${endif}\
# :::::::::::: transmission bittorrent client
${if_existing /tmp/conky/transmission.torrents}\
# ::: no active torrents
${if_match ${lua get activeNum ${lines /tmp/conky/transmission.torrents}} == 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-torrents.png 0 0}\
# ------- panel | light yellow no left round edges | top -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light.png 38 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-bottom-right.png 162 31}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 38 38}\
# ------- panel | light yellow no left round edges | bottom -------
${voffset 5}${offset 45}${color1}transmission
${voffset 2}${offset 45}${color}no active torrents${voffset 9}
${lua increment_offsets 0 42}${lua decrease_total_lines 2}\
${else}\
# ::: active torrents
${lua_parse draw_image ~/conky/monochrome/images/common/green-torrents.png 0 0}\
# ------- panel | light green no left round edges | top -------
${lua_parse draw_image ~/conky/monochrome/images/common/green-panel-light.png 38 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-panel-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-panel-light-edge-bottom-right.png 162 31}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 38 38}\
# ------- panel | light green no left round edges | bottom -------
${voffset 5}${offset 45}${color3}transmission
${voffset 2}${offset 45}${color4}${lua get activeNum} active torrents${voffset 10}
${lua increment_offsets 0 41}\
# -------  vertical table image -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-dark.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-dark-edge-top-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light.png 59 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-dark-edge-bottom-left.png 0 48}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-bottom-right.png 162 48}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 0 55}\
# --------- end of table image ---------
${voffset 3}${offset 5}${color1}swarm${goto 67}${color}${if_existing /tmp/conky/transmission.peers.raw}${lua pad ${lines /tmp/conky/transmission.peers.raw} 6} peers${else}file missing${endif}
${voffset 3}${offset 5}${color1}upload${color}${if_existing /tmp/conky/transmission.speed.up}${alignr 43}${cat /tmp/conky/transmission.speed.up}${else}file missing${endif}
${voffset 3}${offset 5}${color1}download${color}${if_existing /tmp/conky/transmission.speed.down}${alignr 43}${cat /tmp/conky/transmission.speed.down}${else}file missing${endif}${voffset 8}
${lua increment_offsets 0 58}\
# ::: torrent uploads
${if_match ${lines /tmp/conky/transmission.torrents.up} > 0}\
# -------  table | yellow 2 columns | top edge    -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-dark.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-dark-edge-top-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-panel-dark.png 139 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-panel-dark-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light.png 0 23}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-panel-light.png 139 23}\
${lua_parse draw_image ~/conky/monochrome/images/common/blank-panel.png 169 0}\
${lua increment_offsets 0 23}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-peers.png 15 22}\
${voffset 5}${offset 5}${color1}torrent${alignr 4}up${voffset 7}
${color}${lua_parse head /tmp/conky/transmission.torrents.up 72}${voffset 8}${lua increase_y_offset /tmp/conky/transmission.torrents.up}
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-panel-light-edge-bottom-left.png 0 -7}\
