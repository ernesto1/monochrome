--[[
this conky requires the following supporting scripts running in the background:

 - dnfPackageLookup.bash
 - transmission.bash
   requires the 'remote control' feature enabled in the transmission bittorrent client: edit > preferences > remote

output files from these supporting scrips are read from /tmp/conky
]]

conky.config = {
  lua_load = '~/conky/monochrome/common.lua ~/conky/monochrome/panel.lua',
  lua_draw_hook_pre = 'reset_state',
  
  update_interval = 2,    -- update interval in seconds
  xinerama_head = 1,      -- for multi monitor setups, select monitor to run on: 0,1,2
  double_buffer = true,   -- use double buffering (reduces flicker, may not work for everyone)

  -- window alignment
  alignment = 'top_right',  -- top|middle|bottom_left|right
  gap_x = 3,
  gap_y = 35,

  -- window settings
  minimum_width = 169,      -- conky will add an extra pixel to this  
  maximum_width = 169,
  minimum_height = 1016,
  own_window = true,
  own_window_type = 'desktop',    -- values: desktop (background), panel (bar)
  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

  -- window borders
  draw_borders = false,     -- draw borders around the conky window
  border_width = 1,         -- width of border window in pixels
  border_inner_margin = 0,  -- margin between the border and text in pixels
  border_outer_margin = 0,  -- margin between the border and the edge of the window in pixels
  
  -- transparency configuration
  draw_blended = false,
  own_window_transparent = true,
  own_window_argb_visual = true,    -- turn on transparency
  own_window_argb_value = 255,      -- range from 0 (transparent) to 255 (opaque)
  
  -- miscellanous settings
  imlib_cache_flush_interval = 250,
  
  -- font settings
  use_xft = false,
  draw_shades = false,      -- black shadow on text (not good if text is black)
  draw_outline = false,     -- black outline around text (not good if text is black)
  -- colors
  default_color = '703d0a', -- regular text
  color1 = 'white',
  color2 = 'fbfcdc',        -- highlight important packages
  color3 = 'white',         -- secondary menu labels
  color4 = 'a7aa71'         -- secondary menu text
};

conky.text = [[
${lua set_total_lines 50}\
# :::::::::::: package updates
${if_existing /tmp/conky/dnf.packages.formatted}\
${image ~/conky/monochrome/images/widgets-dock/green-packages-small.png -p 0,0}\
# ------- panel | light green no left round edges | top -------
${image ~/conky/monochrome/images/common/green-menu-light.png -p 38,0}\
${image ~/conky/monochrome/images/common/green-menu-light-edge-top-right.png -p 162,0}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 169,0}\
${image ~/conky/monochrome/images/common/green-menu-light-edge-bottom-right.png -p 162,31}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 38,38}\
# ------- panel | light green no left round edges | bottom -------
${voffset 5}${offset 45}${color3}dandified yum
${voffset 2}${offset 45}${color4}${lines /tmp/conky/dnf.packages.formatted} package updates${voffset 10}
# -------  table | yellow 1 column | top edge    -------
${image ~/conky/monochrome/images/common/yellow-menu-dark.png -p 0,41}\
${image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-left.png -p 0,41}\
${image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-right.png -p 162,41}\
${image ~/conky/monochrome/images/common/yellow-menu-light.png -p 0,60}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 169,41}\
# -------  table | yellow 1 column | bottom edge -------
${lua increment_offsets 0 60}\
# optional dnf branding, can be removed or won't matter if the image does not exist
${image ~/conky/monochrome/images/common/yellow-menu-dnf.png -p 95,62}\
${offset 5}${color1}package${alignr 4}version${voffset 6}
${color}${lua_parse paginate /tmp/conky/dnf.packages.formatted 25}${lua increase_y_offset /tmp/conky/dnf.packages.formatted}${voffset 9}
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-left.png 0 -7}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png 162 -7}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 0 0}\
${lua increment_offsets 0 4}\
${else}\
# ::: no updates available or dnf script not running
${image ~/conky/monochrome/images/widgets-dock/yellow-packages-small.png -p 0,0}\
# ------- panel | light yellow no left round edges | top -------
${image ~/conky/monochrome/images/common/yellow-menu-light.png -p 38,0}\
${image ~/conky/monochrome/images/common/yellow-menu-light-edge-top-right.png -p 162,0}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 169,0}\
${image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png -p 162,31}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 38,38}\
# ------- panel | light yellow no left round edges | bottom -------
${voffset 5}${offset 45}${color1}dandified yum
${voffset 2}${offset 45}${color}no package updates${voffset 9}
${lua increment_offsets 0 42}${lua decrease_total_lines 2}\
${endif}\
# :::::::::::: transmission bittorrent client
${if_existing /tmp/conky/transmission.active}\
# ::: no active torrents
${if_match ${lua get activeNum ${lines /tmp/conky/transmission.active}} == 0}\
${lua_parse draw_image ~/conky/monochrome/images/widgets-dock/yellow-torrents-small.png 0 0}\
# ------- panel | light yellow no left round edges | top -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light.png 38 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png 162 31}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 38 38}\
# ------- panel | light yellow no left round edges | bottom -------
${voffset 5}${offset 45}${color1}transmission
${voffset 2}${offset 45}${color}no active torrents${voffset 9}
${lua increment_offsets 0 42}${lua decrease_total_lines 2}\
${else}\
# ::: active torrents
${lua_parse draw_image ~/conky/monochrome/images/widgets-dock/green-torrents-small.png 0 0}\
# ------- panel | light green no left round edges | top -------
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-light.png 38 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-light-edge-bottom-right.png 162 31}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 38 38}\
# ------- panel | light green no left round edges | bottom -------
${voffset 5}${offset 45}${color3}transmission
${voffset 2}${offset 45}${color4}${lua get activeNum} active torrents${voffset 10}
${lua increment_offsets 0 41}\
# -------  vertical table image -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light.png 59 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark-edge-bottom-left.png 0 48}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png 162 48}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 0 55}\
# --------- end of table image ---------
${voffset 3}${offset 5}${color1}swarm${goto 67}${color}${if_existing /tmp/conky/transmission.peers}${lua pad ${lines /tmp/conky/transmission.peers} 6} peers${else}file missing${endif}
${voffset 3}${offset 5}${color1}upload${color}${if_existing /tmp/conky/transmission.speed.upload}${alignr 43}${cat /tmp/conky/transmission.speed.upload}${else}file missing${endif}
${voffset 3}${offset 5}${color1}download${color}${if_existing /tmp/conky/transmission.speed.download}${alignr 43}${cat /tmp/conky/transmission.speed.download}${else}file missing${endif}${voffset 10}
${lua increment_offsets 0 58}\
# -------  table | yellow 2 columns | top edge    -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-dark.png 139 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-dark-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light.png 0 19}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-light.png 139 19}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 169 0}\
${lua increment_offsets 0 19}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-peers.png 15 22}\
${offset 5}${color1}torrent${alignr 4}up${voffset 6}
${color}${lua_parse head /tmp/conky/transmission.active 50}${lua increase_y_offset /tmp/conky/transmission.active}
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-left.png 0 -7}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-light-edge-bottom-right.png 162 -7}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 0 0}\
# -------  table | yellow 2 columns | bottom edge -------
${lua increment_offsets 0 3}\
${endif}\
${else}\
# ::: error state
${lua_parse draw_image ~/conky/monochrome/images/widgets-dock/green-torrents-small.png 0 0}\
# ------- panel | dark green no left round edges | top -------
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-dark.png 38 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-dark-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-dark-edge-bottom-right.png 162 31}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 38 38}\
# ------- panel | dark green no left round edges | bottom -------
${voffset 5}${offset 45}${color3}transmission
${voffset 2}${offset 45}${color4}input files missing${voffset 10}
${lua increment_offsets 0 42}${lua decrease_total_lines 2}\
${endif}\
]]
