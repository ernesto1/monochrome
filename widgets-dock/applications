--[[
this conky requires the following supporting scripts running in the background:

 - dnfPackageLookup.bash
 - transmission.bash
   requires the 'remote control' feature enabled in the transmission bittorrent client: edit > preferences > remote

output files from these supporting scrips are read from /tmp/conky
]]

conky.config = {
  lua_load = '~/conky/monochrome/common.lua ~/conky/monochrome/panel.lua',
  lua_draw_hook_pre = 'reset_state',
  
  update_interval = 2,    -- update interval in seconds
  xinerama_head = 1,      -- for multi monitor setups, select monitor to run on: 0,1,2
  double_buffer = true,   -- use double buffering (reduces flicker, may not work for everyone)

  -- window alignment
  alignment = 'top_right',  -- top|middle|bottom_left|right
  gap_x = 5,
  gap_y = 5,

  -- window settings
  minimum_width = 169,      -- conky will add an extra pixel to this  
  maximum_width = 169,
  minimum_height = 1317,
  own_window = true,
  own_window_type = 'desktop',    -- values: desktop (background), panel (bar)
  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

  -- window borders
  draw_borders = false,     -- draw borders around the conky window
  border_width = 1,         -- width of border window in pixels
  border_inner_margin = 0,  -- margin between the border and text in pixels
  border_outer_margin = 0,  -- margin between the border and the edge of the window in pixels
  
  -- transparency configuration
  draw_blended = false,
  own_window_transparent = true,
  own_window_argb_visual = true,    -- turn on transparency
  own_window_argb_value = 255,      -- range from 0 (transparent) to 255 (opaque)
  
  -- miscellanous settings
  imlib_cache_flush_interval = 250,
  
  -- font settings
  use_xft = false,
  draw_shades = false,      -- black shadow on text (not good if text is black)
  draw_outline = false,     -- black outline around text (not good if text is black)
  -- colors
  default_color = '703d0a', -- regular text
  color1 = 'white',
  color2 = 'fbfcdc',        -- highlight important packages
  color3 = 'white',         -- secondary menu labels
  color4 = 'a7aa71'         -- secondary menu text
};

conky.text = [[
# :::::::::::: package updates
${if_existing /tmp/conky/dnf.packages.formatted}\
# ------- light panel top edge    -------
${image ~/conky/monochrome/images/common/green-menu-light.png -p 0,0}\
${image ~/conky/monochrome/images/common/green-menu-light-edge-top-left.png -p 0,0}\
${image ~/conky/monochrome/images/common/green-menu-light-edge-top-right.png -p 162,0}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 169,0}\
${image ~/conky/monochrome/images/common/green-menu-light-edge-bottom-left.png -p 0,12}\
${image ~/conky/monochrome/images/common/green-menu-light-edge-bottom-right.png -p 162,12}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 0,19}\
# ------- light panel bottom edge -------
${voffset 2}${alignc}${color3}dandified yum${voffset 9}
# ------- single column table | top edge    -------
${image ~/conky/monochrome/images/common/yellow-menu-dark.png -p 0,22}\
${image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-left.png -p 0,22}\
${image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-right.png -p 162,22}\
${image ~/conky/monochrome/images/common/yellow-menu-light.png -p 0,41}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 169,22}\
# ------- single column table | bottom edge -------
${lua increment_offsets 0 41}\
# optional dnf branding, can be removed or won't matter if the image does not exist
${image ~/conky/monochrome/images/common/yellow-menu-dnf.png -p 111,43}\
${offset 5}${color1}package${alignr 4}version${voffset 6}
${color}${lua_parse paginate /tmp/conky/dnf.packages.formatted 25}${lua increase_y_offset /tmp/conky/dnf.packages.formatted}${voffset 13}
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-left.png 0 -7}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png 162 -7}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 0 0}\
${lua increment_offsets 0 8}\
${else}\
# ::: error state
# ------- single column table | top edge    -------
${image ~/conky/monochrome/images/common/yellow-menu-dark.png -p 0,0}\
${image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-left.png -p 0,0}\
${image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-right.png -p 162,0}\
${image ~/conky/monochrome/images/common/yellow-menu-light.png -p 0,19}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 169,0}\
${image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-left.png -p 0,31}\
${image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png -p 162,31}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 0,38}\
# ------- single column table | bottom edge -------
${lua increment_offsets 0 46}${lua decrease_total_lines 2}\
${voffset 2}${alignc}${color1}dandified yum${voffset 6}
${alignc}${color}no package updates${voffset 12}
${endif}\
# :::::::::::: transmission bittorrent client
${if_existing /tmp/conky/transmission.active}\
# ::: no active torrents
${if_match ${lua get activeNum ${lines /tmp/conky/transmission.active}} == 0}\
# ------- single column table | top edge    -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light.png 0 19}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-left.png 0 31}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png 162 31}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 0 38}\
# ------- single column table | bottom edge -------
${voffset 2}${alignc}${color1}transmission${voffset 6}
${alignc}${color}no active torrents${voffset 12}
${lua increment_offsets 0 46}${lua decrease_total_lines 2}\
${else}\
# ::: active torrents
# ------- light panel top edge    -------
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-light.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-light-edge-top-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-light-edge-bottom-left.png 0 12}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-light-edge-bottom-right.png 162 12}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 0 19}\
# ------- light panel bottom edge -------
${voffset 2}${alignc}${color3}transmission${voffset 9}
${lua increment_offsets 0 22}\
# -------  vertical table image -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light.png 75 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark-edge-bottom-left.png 0 64}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png 162 64}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 0 71}\
# --------- end of table image ---------
${voffset 3}${offset 5}${color1}swarm${goto 81}${color}${if_existing /tmp/conky/transmission.peers}${lua pad ${lua get peers ${lines /tmp/conky/transmission.peers}}} peers${else}file missing${endif}
${voffset 3}${offset 5}${color1}seeding${goto 81}${color}${if_existing /tmp/conky/transmission.seeding}${lua pad ${lines /tmp/conky/transmission.seeding}} torrents${else}file missing${endif}
${voffset 3}${offset 5}${color1}downloading${goto 81}${color}${if_existing /tmp/conky/transmission.downloading}${lua pad ${lines /tmp/conky/transmission.downloading}} torrents${else}file missing${endif}
${voffset 3}${offset 5}${color1}idle${goto 81}${color}${if_existing /tmp/conky/transmission.idle}${lua pad ${lines /tmp/conky/transmission.idle}} torrents${else}file missing${endif}${voffset 10}
${lua increment_offsets 0 74}\
# ------- single column table | top edge    -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light.png 0 19}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 169 0}\
# ------- single column table | bottom edge -------
${lua increment_offsets 0 19}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-peers.png 29 22}\
${alignc}${color1}active torrents ${color}(${color}${lua get activeNum}${color})${color1}${voffset 6}
${color}${lua_parse head /tmp/conky/transmission.active 25}${lua increase_y_offset /tmp/conky/transmission.active}${voffset 10}
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-left.png 0 -7}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png 162 -7}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 0 0}\
${lua increment_offsets 0 3}\
${endif}\
${else}\
# ::: error state
# ------- single column table | top edge    -------
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-dark.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-dark-edge-top-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-dark-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-light.png 0 19}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-light-edge-bottom-left.png 0 50}\
${lua_parse draw_image ~/conky/monochrome/images/common/green-menu-light-edge-bottom-right.png 162 50}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 0 57}\
# ------- single column table | bottom edge -------
${lua increment_offsets 0 65}${lua decrease_total_lines 2}\
${voffset 2}${alignc}${color1}transmission${voffset 6}
${voffset 2}${alignc}${color4}active torrents input file
${voffset 3}${alignc}is missing${voffset 15}
${endif}\
]]
