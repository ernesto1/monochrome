-- n.b. this conky requires the music-player java app to be running in the background
--      it generates input files under /tmp/conky/musicplayer.* which this conky will read

conky.config = {
  lua_load = '~/conky/monochrome/common.lua ~/conky/monochrome/panel.lua',
  lua_draw_hook_pre = 'reset_state',
  
  update_interval = 2,    -- update interval in seconds
  xinerama_head = 1,      -- for multi monitor setups, select monitor to run on: 0,1,2
  double_buffer = true,   -- use double buffering (reduces flicker, may not work for everyone)

  -- window alignment
  alignment = 'bottom_right',  -- top|middle|bottom_left|right
  gap_x = 3,
  gap_y = 165,

  -- window settings
  minimum_width = 169,      -- conky will add an extra pixel to this
  maximum_width = 169,
  minimum_height = 38,      -- conky will add an extra pixel to this height
  own_window = true,
  own_window_type = 'desktop',    -- values: desktop (background), panel (bar)
  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

  -- window borders
  draw_borders = false,     -- draw borders around the conky window
  border_width = 1,         -- width of border window in pixels
  border_inner_margin = 0,  -- margin between the border and text in pixels
  border_outer_margin = 0,  -- margin between the border and the edge of the window in pixels
  
  -- transparency configuration
  draw_blended = false,
  own_window_transparent = true,
  own_window_argb_visual = true,    -- turn on transparency
  own_window_argb_value = 255,      -- range from 0 (transparent) to 255 (opaque)
  
  -- miscellanous settings
  imlib_cache_flush_interval = 250,

  -- font settings
  use_xft = false,
  draw_shades = false,      -- black shadow on text (not good if text is black)
  draw_outline = false,     -- black outline around text (not good if text is black)
  -- colors
  default_color = '703d0a',  -- regular text
  color1 = 'white',
  color3 = 'white',         -- secondary menu labels
  color4 = 'a7aa71'         -- secondary menu text
};

conky.text = [[
# the UI of this conky has four states: song with album art
#                                       song with no album art
#                                       no music player is running
#                                       dependent java dbus listener application is not running
${if_existing /tmp/conky/musicplayer.name}\
# :::: no music player available
${if_existing /tmp/conky/musicplayer.name Nameless}\
${image ~/conky/monochrome/images/widgets-dock/yellow-sound-wave-small.png -p 0,0}\
# ------- panel | light yellow no left round edges | top -------
${image ~/conky/monochrome/images/common/yellow-menu-light.png -p 38,0}\
${image ~/conky/monochrome/images/common/yellow-menu-light-edge-top-right.png -p 162,0}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 169,0}\
${image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png -p 162,31}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 38,38}\
# ------- panel | light yellow no left round edges | bottom -------
${voffset 5}${offset 45}${color1}now playing
${voffset 2}${offset 45}${color}no player running
${else}\
# :::: music player available
${if_existing /tmp/conky/musicplayer.playbackStatus Playing}\
${image ~/conky/monochrome/images/widgets-dock/green-sound-wave-small.png -p 0,0}\
# ------- panel | light green no left round edges | top -------
${image ~/conky/monochrome/images/common/green-menu-light.png -p 38,0}\
${image ~/conky/monochrome/images/common/green-menu-light-edge-top-right.png -p 162,0}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 169,0}\
${image ~/conky/monochrome/images/common/green-menu-light-edge-bottom-right.png -p 162,31}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 38,38}\
# ------- panel | light green no left round edges | bottom -------
${voffset 5}${goto 50}${color3}${cat /tmp/conky/musicplayer.name}
${voffset 2}${goto 50}${color4}${cat /tmp/conky/musicplayer.playbackStatus}${voffset 8}
${else}\
${image ~/conky/monochrome/images/widgets-dock/yellow-sound-wave-small.png -p 0,0}\
# ------- panel | light yellow no left round edges | top -------
${image ~/conky/monochrome/images/common/yellow-menu-light.png -p 38,0}\
${image ~/conky/monochrome/images/common/yellow-menu-light-edge-top-right.png -p 162,0}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 169,0}\
${image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png -p 162,31}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 38,38}\
# ------- panel | light yellow no left round edges | bottom -------
${voffset 5}${goto 50}${color1}${cat /tmp/conky/musicplayer.name}
${voffset 2}${goto 50}${color}${cat /tmp/conky/musicplayer.playbackStatus}${voffset 8}
${endif}\
${lua increment_offsets 0 41}\
# :::: album art
${if_existing /tmp/conky/musicplayer.albumArtPath}\
# ------- light panel top edge    -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-top-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 169 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-left.png 0 162}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png 162 162}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 0 169}\
# ------- light panel bottom edge -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-album-placeholder.png 2 0}\
${lua_parse load_image ${cat /tmp/conky/musicplayer.albumArtPath} 165x165 2 2}\
${voffset 172}${lua increment_offsets 0 172}\
${endif}\
# :::: track details
# menu expands based on the track metadata fields available
# the position of the bottom edge images is shifted down 16px for each field
# -------  vertical table image top -------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark-edge-top-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light.png 45 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-top-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 169 0}\
${if_existing /tmp/conky/musicplayer.playbackStatus Playing}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-sound-wave.png 109 0}\
${endif}\
# --------- end of table image top ---------
${lua increment_offsets 0 14}\
${voffset 3}${offset 5}${color1}title${goto 50}${color}${cat /tmp/conky/musicplayer.title}
${if_match "${lua get album ${cat /tmp/conky/musicplayer.album}}" != "unknown album"}\
${voffset 3}${offset 5}${color1}album${goto 50}${color}${lua get album}${lua increment_offsets 0 16}
${endif}\
${if_match "${lua get artist ${cat /tmp/conky/musicplayer.artist}}" != "unknown artist"}\
${voffset 3}${offset 5}${color1}artist${goto 50}${color}${lua get artist}${lua increment_offsets 0 16}
${endif}\
${if_match "${lua get genre ${cat /tmp/conky/musicplayer.genre}}" != "unknown genre"}\
${voffset 3}${offset 5}${color1}genre${goto 50}${color}${lua get genre}${lua increment_offsets 0 16}
${endif}\
${voffset -10}\
# ------  vertical table image bottom ------
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-dark-edge-bottom-left.png 0 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/yellow-menu-light-edge-bottom-right.png 162 0}\
${lua_parse draw_image ~/conky/monochrome/images/common/menu-blank.png 0 7}\
# -------- end of table image bottom -------
${endif}\
${else}\
${image ~/conky/monochrome/images/widgets-dock/green-sound-wave-small.png -p 0,0}\
# ------- panel | dark green no left round edges | top -------
${image ~/conky/monochrome/images/common/green-menu-dark.png -p 38,0}\
${image ~/conky/monochrome/images/common/green-menu-dark-edge-top-right.png -p 162,0}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 169,0}\
${image ~/conky/monochrome/images/common/green-menu-dark-edge-bottom-right.png -p 162,31}\
${image ~/conky/monochrome/images/common/menu-blank.png -p 38,38}\
# ------- panel | dark green no left round edges | bottom -------
${voffset 5}${offset 45}${color3}now playing
${voffset 2}${offset 45}${color4}input files missing
${endif}\
]];
